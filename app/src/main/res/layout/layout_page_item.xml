<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginTop="12sp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/page_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLength="30"
        android:gravity="start"/>
    <TextView
        android:id="@+id/page_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Name"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLength="30"
        android:gravity="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        >

        <ImageButton
            android:id="@+id/page_start_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic"
            android:background="@android:color/transparent"
            android:tint="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/page_play_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_circle"
            android:background="@android:color/transparent"
            android:tint="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/page_upload_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cloud_upload"
            android:background="@android:color/transparent"
            android:tint="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/page_delete_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="@android:color/transparent"
            android:tint="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_margin="4dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <ImageButton
            android:id="@+id/page_cut_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_content_cut"
            android:background="@android:color/transparent"
            android:tint="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/page_join_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_merge"
            android:background="@android:color/transparent"
            android:tint="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

    </LinearLayout>


</LinearLayout>
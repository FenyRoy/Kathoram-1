<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="New Book"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_new_book_message_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="Enter the name for new book."
            android:textSize="13sp" />

        <EditText
            android:id="@+id/dialog_new_book_name_edittext"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_below="@id/dialog_new_book_message_textview"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/smothened_corner_with_stroke"
            android:hint="New book name ?"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="15sp"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/dialog_new_book_name_edittext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/dialog_new_book_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorRed"
                android:background="@drawable/curved_corners"
                android:padding="2dp"
                android:text="Cancel"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/dialog_new_book_done_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:background="@drawable/curved_corners"
                android:padding="2dp"
                android:text="Done"
                android:layout_marginStart="50dp"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>